<body>

<div id="modal-container"></div>

<div class="container-fluid" style="padding-top: 10px;">
  <div id="playhead">
    <div class="row">
      <div class="col-xs-2">
        <button class="btn btn-sm btn-info refresh" style="margin-top: 10px">
          <i class="fa fa-refresh"></i>
        </button>
      </div>
      <div class="col-xs-8 infobox" style="text-align: center">
        <div class="infobox-inner"><img src="http://alextdavis.me/favicon.ico"></div>
      </div>
      <div class="col-xs-2">
        <button class="btn btn-sm btn-info" style="margin-top: 10px">
          <i class="fa fa-list"></i>
        </button>
      </div>
    </div>

    <div>
      <img id="artwork" class="img-responsive" src="//placehold.it/400"/>
      <div id="queue-list" style="max-height: 290px; background-color: rgba(128,128,128,0.5); overflow-y: scroll; position: relative; top: 0; left: 0;">
      </div>
    </div>

    <div style="text-align: center">
      <button class="btn btn-default" id="debug-button"><i class="fa fa-gear"></i></button>

      <button class="btn btn-md prev"><i class="fa fa-backward"></i></button>
      <button class="btn btn-lg play"><i class="fa fa-play"></i></button>
      <button class="btn btn-md next"><i class="fa fa-forward"></i></button>

      <button class="btn btn-default shuffle shuffle-off"><i class="fa fa-random"></i></button>
    </div>
    <audio id="main-player" controls></audio>
  </div>

