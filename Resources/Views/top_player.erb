<div id="playhead">
  <button class="btn btn-md prev"><i class="fa fa-backward"></i></button>
  <button class="btn btn-lg play"><i class="fa fa-play"></i></button>
  <button class="btn btn-md next"><i class="fa fa-forward"></i></button>
  <div class="infobox">
    <div class="infobox-inner"><img src="http://alextdavis.me/favicon.ico"></div>
  </div>
  <button class="btn" id="debug-button"><i class="fa fa-gear"></i></button>
  <button class="btn btn-default shuffle shuffle-off"><i class="fa fa-random"></i></button>
  <div class="btn-group" id="view-toggle">
    <button class="btn btn-default" data-url="/b/all">Songs</button>
    <button class="btn btn-default" data-url="/b/albums">Albums</button>
    <button class="btn btn-default" data-url="/b/artists">Artists</button>
    <button class="btn btn-default" data-url="/b/tags">Tags</button>
    <button class="btn btn-default" data-url="/b/stars">Stars</button>
    <button class="btn btn-default" data-url="/b/searches">Searches</button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-plus"></i> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><a href="#"><i class="fa fa-user"></i> Artist</a></li>
      <li><a href="#"><i class="fa fa-list-alt"></i> Album</a></li>
      <li><a href="#"><i class="fa fa-music"></i> Song</a></li>
    </ul>
  </div>
  <form class="form-inline" style="display:inline-block;">
    <div class="form-group">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </div>
  </form>
  <audio id="main-player" controls></audio>
</div>
